<form>
  {{nypr-input
    label='Email'
    type='email'
    fieldname='signupEmail'
    placeholder='your@PrePopulatedEmail.com'
    value=optinEmail
    errors=optinEmailValid
    showError=true
  }}

  {{nypr-input
    label='Phone Number'
    type='tel'
    fieldname='signupPhoneNumber'
    placeholder='000-000-0000'
    value=optinPhone
    errors=optinPhoneValid
    showError=true
  }}

  {{optinEmailValid}}
  {{optinPhoneValid}}

  <button>Sign Up</button>
</form>
{{!--
{{#opt-in as |o|}}

  {{#o.newsletter as |newsletter|}}
    {{#newsletter.successState}}
    {{/newsletter.successState}}
  {{/o.newsletter}}

  {{#o.sms as |sms|}}
    {{#sms.successState}}
    {{/sms.successState}}
  {{/o.sms}}

  {{#o.submitButton}}
  {{/o.submitButton}}


{{/opt}}
--}}