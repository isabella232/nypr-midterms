{{#if (has-block)}}
  {{yield (hash
    top=(component 'episode-tease/top')
    bottom=(component 'episode-tease/bottom')
    logo=(component 'episode-tease/logo')
    title=(component 'episode-tease/title')
    body=(component 'episode-tease/body')
    link=(component 'episode-tease/link')
    footer=(component 'episode-tease/footer')
  )}}
{{else}}
  {{#episode-tease/top bg=(image-template show.image.template 238 111 'c')}}
    {{episode-tease/logo image=(image-template show.image.template 160 160 'c') height=80 width=80}}
  {{/episode-tease/top}}

  {{#episode-tease/bottom}}
    {{episode-tease/title show.title}}

    {{#episode-tease/body}}
      {{{show.tease}}}
    {{/episode-tease/body}}

    {{episode-tease/link "Listen to the Latest Episode" show.url}}

    {{episode-tease/footer links=show.podcastLinks}}
  {{/episode-tease/bottom}}
{{/if}}
