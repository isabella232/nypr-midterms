{{#media-object class="episode-tease__top" as |mo|}}
  {{#mo.media}}
    {{listen-button
      data-test-listen
      class="episode-listen"
      itemPK=audio
      type='blue-hollow'
      itemTitle=title
    }}
  {{/mo.media}}

  {{#mo.body}}
    {{yield (hash
      title=(component 'episode-tease/title')
      link=(component 'episode-tease/link')
      body=(component 'episode-tease/body')
    )}}
  {{/mo.body}}

{{/media-object}}

{{yield (hash footer=(component 'episode-tease/footer'))}}
