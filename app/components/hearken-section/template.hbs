{{#page-section class="hearken-section__wrapper" open=(media 'isMedium') as |section|}}
  {{#section.tease}}
    <h2 class="hearken-section__title"> <span> REAL ANSWERS</span></h2>
    {{#if chunk1}}
      <div class="hearken-section__chunk-wrapper">
        {{{chunk1.content}}}
      </div>
    {{else}}
      {{yield}}
    {{/if}}
    {{/section.tease}}

    {{#section.body class="hearken-section__body"}}
      {{{chunk2.content}}}
      <div class="hearken-section__view-more">
        <button class="hearken-section__button" href="">View More Upvoted Content</button>
        <a href="" class="hearken-section__view-more-explainer"> How does this work? </a>
      </div>
      <iframe class="hearken-submission" srcdoc="<script async src='https://modules.wearehearken.com/wnyc/embed/1770.js'></script>" width="100%" height="470px" style="border: none;"></iframe>
      <iframe class="hearken-answer" srcdoc={{{chunk2.content}}} width="100%" height="470px" style="border: none;"></iframe>

      <script async src="https://modules.wearehearken.com/wnyc/embed/1770.js"></script>

    {{/section.body}}

  {{/page-section}}
