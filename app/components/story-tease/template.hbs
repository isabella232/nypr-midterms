<div class="story-tease__brand">
  {{serialized-list story.producingOrganizations separator='+' key='name'}}
</div>

<h1 class="story-tease__title">
  <a href={{story.url}} target="_blank">
    {{story.title}}
  </a>
</h1>

{{#if (and showImage imageUrl)}}
<div class="story-tease__thumb">
  <img src={{imageUrl}} />
</div>
{{/if}}
<h2 class="story-tease__summary">{{story.tease}}</h2>

<div class="story-tease__date">
  Published {{moment-from story.newsdate}}
</div>
