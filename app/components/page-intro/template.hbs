{{#nypr-ui/hero
  class="page-intro"
  gradient=true
  sticky=true
  offset=offset
  as |hero|}}
  {{#hero.footer class="page-intro__footer"}}
    <div class="intro-share">
      <span class="intro-share__label">Share</span>
      {{#share-icons as |share|}}
        {{share.fb-post}}
        {{share.tweet text="TKTK Tweet Text" via="WNYC"}}
        {{share.email subject="TKTK Email Subject"}}
      {{/share-icons}}
    </div>
  {{/hero.footer}}

  {{#hero.headline}}
    {{page-intro/lockup}}
  {{/hero.headline}}

  <div class="election-countdown-wrapper">
    {{election-countdown unit='days' to='2018-11-06T00:00:00.000-05:00'}}
  </div>

  {{#hero.top as |top|}}
    {{#top.left}}
      {{#nav-links links=links as |nav i|}}
        {{#unless nav.link.hash}}
          {{link-to nav.link.text nav.link.route}}
        {{else}}
          {{hash-link
            route=nav.link.route
            hash=nav.link.hash
            label=nav.link.text
            onClick=(action nav.moveBar i)
            options=(hash offset=-100)}}
        {{/unless}}
      {{/nav-links}}
    {{/top.left}}
  {{/hero.top}}
{{/nypr-ui/hero}}
