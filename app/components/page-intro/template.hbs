{{#nypr-ui/hero
  class="page-intro"
  gradient=true
  sticky=showNav
  offset=offset
  as |hero|}}
  {{#hero.footer class="page-intro__footer"}}
    <div class="intro-share">
      <span class="intro-share__label">Share</span>
      {{#share-icons as |share|}}
        {{share.fb-post}}
        {{share.tweet via="WNYC"}}
        {{share.email}}
      {{/share-icons}}
    </div>
  {{/hero.footer}}

  {{#hero.headline}}
    {{page-intro/lockup}}
  {{/hero.headline}}

  {{#if showNav}}
  {{#hero.top as |top|}}
    {{#top.left}}
      {{#nav-links links=links as |nav i|}}
        {{#unless nav.link.hash}}
          {{link-to nav.link.text nav.link.route}}
        {{else}}
          {{hash-link
            route=nav.link.route
            hash=nav.link.hash
            label=nav.link.text
            onClick=(action nav.moveBar i)
            options=(hash offset=-100)}}
        {{/unless}}
      {{/nav-links}}
    {{/top.left}}
  {{/hero.top}}
  {{/if}}
{{/nypr-ui/hero}}
