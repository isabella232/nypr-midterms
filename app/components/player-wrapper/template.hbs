{{#liquid-if sound class="player-wrapper" use='fade'}}
  {{#nypr-player
    storyTitle=currentStory.title
    showTitle=currentShow.title
    isAudiostream=isStream
    as |content|}}
    {{#content.for 'trackInfo'}}
      {{nypr-player-integration/track-info
        currentAudio    = model
        currentSound    = sound
        showTitle       = currentShow.title
        showUrl         = currentShow.url
        storyTitle      = currentStory.title
        storyUrl        = currentStory.url
        audioId         = currentAudioId
        isStream        = isStream
      }}
      {{#unless hifi.isLoading}} {{! only show the share button when the audio has loaded}}
        {{#with (hash
            data=model.shareMetadata
            title=currentStory.title
            showTitle=(or currentShow.title 'NPR Article'))
          as |meta|}}
          {{#nypr-share-button
            text="SHARE"
            shareUrl=meta.data.shareUrl
            shareText=meta.data.shareText
            data-action='Share from Player'
            as |share|}}
            {{share.button
              type='Facebook'
              data-label=(concat meta.title ' | ' meta.showTitle ' | Facebook')}}
            {{share.button
              type='Twitter'
              via='WNYC'
              data-label=(concat meta.title ' | ' meta.showTitle ' | Twitter')}}
            {{share.button
              type='Email'
              data-label=(concat meta.title ' | ' meta.showTitle ' | Email')}}
          {{/nypr-share-button}}
        {{/with}}
      {{/unless}}
    {{/content.for}}

    {{#content.for 'streamInfo'}}
      <span class="nypr-player-stream-info-station-info">
        LIVE NOW on <a href={{streamScheduleUrl}}
        target={{if (is-external streamScheduleUrl) '_blank'}}
        rel={{if (is-external streamScheduleUrl) 'noopener'}}
        class="gtm__click-tracking"
        data-action='Click Through to Schedule'
        data-label='player'>{{streamName}}</a>
      </span>
      <span class="nypr-player-stream-info-station-links">
        <a href={{streamScheduleUrl}}
          title='Schedule'
          target={{if (is-external streamScheduleUrl) '_blank'}}
          rel={{if (is-external streamScheduleUrl) 'noopener'}}
          class="gtm__click-tracking"
          data-action='Click Through to Schedule'
          data-label='player'>SCHEDULE</a>
        {{#if streamPlaylistUrl}}
        <a href={{streamPlaylistUrl}}
          title='Music Playlist'
          class="gtm__click-tracking"
          data-action='Click Through to Music Playlist'
          data-label='player'>MUSIC PLAYLIST</a>
        {{/if}}
        <a href="https://www.wnyc.org/streams"
          title='All Live Streams'
          class="gtm__click-tracking"
          data-action='Click Through to All Streams'
          data-label='player'
          target='_blank'
          rel='noopener'>ALL STREAMS</a>
      </span>
    {{/content.for}}

    {{#content.for 'aux' as |args|}}
      {{! if we want to show a modal of some kind, we can add a button for it here }}
    {{/content.for}}
  {{/nypr-player}}
{{/liquid-if}}
