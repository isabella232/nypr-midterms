{{#if allClosed}}
  <p class="last-updated__line">
    Results as of {{mostRecent}}
  </p>
{{/if}}

{{#if (and (not hideIfOpen) (not nj.pollsClosed))}}
  <p class="last-updated__line">
    New Jersey polls close at 8 p.m.
  </p>
{{else if (and (not hideIfOpen) (not ny.pollsClosed))}}
  <p class="last-updated__line">
    Results as of {{moment-format ny.lastUpdated 'h:mm a z'}}
  </p>
{{/if}}

{{#if (and (not hideIfOpen) (not ny.pollsClosed))}}
  <p class="last-updated__line">
    New York polls close at 9 p.m.
  </p>
{{/if}}
